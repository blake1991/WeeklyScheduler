<Window x:Name="NameInputDialogWindow" x:Class="WeeklyScheduler.Dialog.NameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeeklyScheduler.Dialog"
        mc:Ignorable="d"
        Title="Input" Height="300" Width="300" 
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" ContentRendered="NameInputDialog_ContentRendered">

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding DialogText}"/>
            <TextBox x:Name="NameInput" Text="{Binding Name, Mode=TwoWay}" MinWidth="200"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Submit" Content="Submit" Margin="0 5 25 0" MinWidth="50"  MaxWidth="75" DockPanel.Dock="Left" Click="SubmitButton_Click" IsDefault="True"/>
                <Button x:Name="Cancel" Content="Cancel" Margin="0 5 0 0" MinWidth="50"  MaxWidth="75" DockPanel.Dock="Right" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
